<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(@post_image.id) do %>
      <%= attachment_image_tag @post_image, :image, :fill, 600, 400, class:"card-img-top"; %>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= attachment_image_tag @post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(post_image_path(@post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= @post_image.photo_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">説明：<%= @post_image.caption %></p>
          <p>投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
          <% if @post_image.user == current_user %>
            <%= link_to "削除", post_image_path(@post_image), method: :delete, data: { confirm: '本当に削除しますか？' } %>
            |
            <%= link_to "編集", edit_post_image_path(@post_image) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>