<div class="container">
  <div class="row no-gutters">
  <!--.no-gutters を指定すると、カラムのガーター(左右のパディング)を無くす-->
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
    <!--画面幅によって、フォームのサイズを変更-->
      <h5 class="text-light bg-secondary p-4 mb-0">会員情報編集フォーム</h5>
      <div class="form-body p-4">
        <%= render 'layouts/errors' , obj: @user %>
        <%= form_with model: @user, local:true do |f| %>
          <%= f.attachment_field :profile_image, class: "w-100" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
            <!--prepend付与するclass名-->
              <span class="input-group-text" aria-hidden="true"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :name, class:"form-control" %>
          </div>
          <hr>
          <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
      </div>
    </div>
  </div>
</div>